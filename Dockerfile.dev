FROM node:20-alpine

# Crear directorio de trabajo
WORKDIR /app

# Instalar dependencias
COPY package*.json ./
RUN npm install

# Copiar archivos del proyecto
COPY . .

# Dar permisos de ejecuci√≥n al script
RUN chmod +x ./start.sh

# Exponer puerto
EXPOSE 3000

